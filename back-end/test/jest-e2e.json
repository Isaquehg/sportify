{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 10000,
  "reporters": [
    ["jest-junit", {
      "outputDirectory": "test/e2e-reports/",
      "outputName": "report.xml"
    }]
  ]
}
